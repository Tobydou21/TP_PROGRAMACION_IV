# ================================================================================
# VARIABLES DE ENTORNO - SISTEMA ESCOLAR
# ================================================================================
# Copiar este archivo a .env y configurar según el ambiente (dev, test, prod)
# ================================================================================

# SEGURIDAD - Django Secret Key
# Generar con: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=django-insecure-pon-aqui-una-clave-segura-de-50-caracteres

# DEBUG MODE - Cambiar a False en PRODUCCIÓN
# True: Mostrar errores detallados (desarrollo)
# False: Ocultar información sensible (producción)
DEBUG=True

# HOSTS PERMITIDOS - Dominios/IPs que pueden acceder
# En desarrollo: 127.0.0.1,localhost
# En producción: ejemplo.com,www.ejemplo.com
ALLOWED_HOSTS=127.0.0.1,localhost

# ================================================================================
# SEGURIDAD EN PRODUCCIÓN (Descomentar y configurar según necesidad)
# ================================================================================

# Habilitar redirección HTTPS (requiere certificado SSL válido)
# SECURE_SSL_REDIRECT=True

# Headers HSTS (HTTP Strict Transport Security) - tiempo en segundos
# SECURE_HSTS_SECONDS=31536000  # 1 año

# Incluir subdominios en HSTS
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True

# Preload en lista de HSTS del navegador
# SECURE_HSTS_PRELOAD=True

# Cookies solo por HTTPS (requiere SSL)
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True

# ================================================================================
# BASE DE DATOS (por defecto SQLite, cambiar en producción a PostgreSQL)
# ================================================================================
# DATABASE_URL=postgresql://user:pass@localhost:5432/sistema_escolar

# ================================================================================
# EMAIL (opcional, para notificaciones en el futuro)
# ================================================================================
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=tu_email@gmail.com
# EMAIL_HOST_PASSWORD=tu_password_o_app_key

# ================================================================================
# LOGGING (opcional, para registro de eventos)
# ================================================================================
# LOG_LEVEL=INFO
# LOG_FILE=logs/sistema_escolar.log

# ================================================================================
# NOTAS
# ================================================================================
# - En desarrollo: DEBUG=True, SECRET_KEY simple
# - En producción: DEBUG=False, SECRET_KEY fuerte, HTTPS=True, usar PostgreSQL
# - Nunca commitear este archivo con valores sensibles a Git
# - Usar secretos de CI/CD (GitHub Secrets, GitLab Variables, etc.) en automación
